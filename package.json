{
  "name": "knative-next-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "bun test --coverage",
    "ci": "biome check . && bun test --coverage",
    "isolate": "npx ts-node scripts/isolate.ts",
    "deploy-all": "npx ts-node scripts/deploy-all.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "minio": "^8.0.6",
    "turbo": "latest"
  },
  "workspaces": ["apps/*", "packages/*"]
}
