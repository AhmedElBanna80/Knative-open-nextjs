{
  "name": "knative-next-monorepo",
  "private": true,
  "packageManager": "bun@1.2.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest",
