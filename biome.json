{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/*.css",
      "!**/node_modules",
      "!**/coverage",
      "!**/.turbo",
      "!**/build",
      "!**/.cursor",
      "!**/bun.lockb"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noLabelWithoutControl": "warn",
        "noSvgWithoutTitle": "warn"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "error",
        "noArrayIndexKey": "warn",
        "noConsole": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "error"
      },
      "complexity": {
        "noForEach": "off",
        "noExtraBooleanCast": "error",
        "noUselessTypeConstraint": "error",
        "useFlatMap": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
